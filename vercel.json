{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "installCommand": "apt-get update && apt-get install -y python3 python3-pip && pip3 install -r requirements.txt",
        "buildCommand": "npm run build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.8"
  }
}
