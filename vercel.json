{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "installCommand": "pip3 install -r requirements.txt && npm install",
        "buildCommand": "npm run vercel-build || { echo 'Build failed'; exit 1; }"
      }
    }
  ],
  "framework": "nextjs",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.9"
  }
}